package arvore_bin;

public class ArvoreBin {

	public void inserir(Nodo n, int valor) {

		if (n.getDado() > valor) {

			if (n.getEsq() != null) {
				inserir(n.getEsq(), valor);
			} else {

				Nodo novoNodo = new Nodo(valor);
				n.setEsq(novoNodo);
			}
		} else if (n.getDado() < valor) {

			if (n.getDir() != null) {
				inserir(n.getDir(), valor);
			} else {

				Nodo novoNodo = new Nodo(valor);
				n.setDir(novoNodo);
			}
		}

	}

}
